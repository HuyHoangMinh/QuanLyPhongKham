<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List User</title>
</head>
<style>
    table,
    th,
    td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    .btn-edit {
        outline: none;
        border: none;
        background: orange;
        height: 25px;
        width: 60px;
        border-radius: 3px;
        cursor: pointer;
    }

    .btn-delete {
        outline: none;
        border: none;
        background: red;
        height: 25px;
        width: 60px;
        border-radius: 3px;
        cursor: pointer;
    }
</style>

<body>


    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            <% for (var i=0; i <data.length; i++) { %>
                <tr>
                    <td>
                        <%= data[i].id %>
                    </td>
                    <td>
                        <%= data[i].email %>
                    </td>
                    <td>
                        <%= data[i].firstName %>
                    </td>
                    <td>
                        <%= data[i].lastName %>
                    </td>
                    <td>
                        <%= data[i].adddress %>
                    </td>
                    <td>
                        <a href="/edit-user?id=<%= data[i].id %>" type="button" class="btn-edit">Edit</a>
                        <a href="/delete-user?id=<%= data[i].id %>" type="button" class="btn-delete">Delete</a>
                    </td>

                </tr>
                <% } %>
        </tbody>
    </table>
</body>

</html>